<launch>
   <!-- Determine this using rosrun pointgrey_camera_driver list_cameras.
       If not specified, defaults to first camera found. -->
  <arg name="camera_serial" default="16061047" /> <!--16061047-->
  <arg name="calibrated" default="1" />

  <group ns="camera">
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager"  output="screen"/>

    <node pkg="nodelet" type="nodelet" name="camera_nodelet" output="screen"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager"
          launch-prefix="sudo -S ROS_ROOT=/home/michael/charlottetown/ros_osrf/install_isolated/share/ros ROS_MASTER_URI=http://localhost:11311 LD_LIBRARY_PATH=/home/michael/charlottetown/robots/devel/lib:/home/michael/charlottetown/robots/devel/lib/x86_64-linux-gnu:/home/michael/charlottetown/ph/devel/lib:/home/michael/charlottetown/ph/devel/lib/x86_64-linux-gnu:/home/michael/charlottetown/utias/devel/lib/x86_64-linux-gnu:/home/michael/charlottetown/extras/install_isolated/lib/x86_64-linux-gnu:/home/michael/charlottetown/vtr2/devel/lib/x86_64-linux-gnu:/home/michael/charlottetown/thirdparty/devel_isolated/easyloggingpp/lib/x86_64-linux-gnu:/home/michael/charlottetown/thirdparty/install_isolated/lib/x86_64-linux-gnu:/home/michael/charlottetown/ros_osrf/install_isolated/lib/x86_64-linux-gnu:/home/michael/charlottetown/utias/devel/lib:/home/michael/charlottetown/extras/install_isolated/lib:/home/michael/charlottetown/vtr2/devel/lib:/home/michael/charlottetown/thirdparty/devel_isolated/easyloggingpp/lib:/home/michael/charlottetown/thirdparty/install_isolated/lib:/home/michael/charlottetown/ros_osrf/install_isolated/lib:/usr/local/lib"
          >
      <param name="frame_id" value="camera" />
      <param name="serial" value="$(arg camera_serial)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <!--<param name="frame_rate" value="20" />-->
      <param name="format7_packet_size" value="4100"/> <!--3280-->
      <param name="format7_color_coding" value="raw8"/>
      <param name="video_mode" value="format7_mode0"/>
      <param name="num_buffers" value="50"/>
      <param name="max_shutter" value="true"/>
      <param name="shutter_speed" value="0.007"/>
      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
    </node>

    <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer camera_nodelet_manager">
    </node>
  </group>
</launch>
